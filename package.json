{
  "name": "appium-boilerplate-e2e",
  "type": "module",
  "description": "Boilerplate project to run WebdriverIO tests with Appium to test native applications on iOS and Android",
  "engines": {
    "node": "^16.17.0 || >=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@wdio/allure-reporter": "^8.14.0",
    "@wdio/appium-service": "^8.14.3",
    "@wdio/browserstack-service": "^8.14.3",
    "@wdio/cli": "^8.14.4",
    "@wdio/dot-reporter": "^9.0.4",
    "@wdio/junit-reporter": "^8.14.0",
    "@wdio/local-runner": "^8.14.3",
    "@wdio/mocha-framework": "^8.40.3",
    "@wdio/testingbot-service": "^9.0.7",
    "appium-uiautomator2-driver": "^2.29.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0",
    "wdio-wait-for": "^3.0.6"
  },
  "scripts": {
    "test:android:bs": "wdio run ./config/wdio.conf.android.bs.ts",
    "test:android:sl": "wdio run ./config/wdio.conf.android.sl.ts",
    "test:android:perfecto": "wdio run ./config/wdio.conf.android.perfecto.ts",
    "test:android:tb": "wdio run ./config/wdio.conf.android.tb.ts",
    "test:local": "wdio run ./config/wdio.conf.local.ts"
  },
  "dependencies": {
    "@wdio/spec-reporter": "^8.15.0",
    "dotenv": "^16.3.1"
  }
}
